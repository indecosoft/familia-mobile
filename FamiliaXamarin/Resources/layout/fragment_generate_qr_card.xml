<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardViewData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_below="@+id/rl_actions"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="-15dp"
            app:cardElevation="6dp">
        <RelativeLayout
                android:id="@+id/rl_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
        >

            <TextView
                    android:id="@+id/status_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/ocr_header"
                    android:layout_marginBottom="16dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                    android:id="@+id/tv_cnp_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status_message"
                    android:layout_marginTop="10dp"
                    android:text="@string/cnp"/>

            <TextView
                    android:id="@+id/tv_nume_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_cnp_f"
                    android:layout_marginTop="10dp"
                    android:text="@string/nume"/>

            <TextView
                    android:id="@+id/tv_prenume_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nume_f"
                    android:layout_marginTop="10dp"
                    android:text="@string/prenume"/>


            <TextView
                    android:id="@+id/tv_cetatenie_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_prenume_f"
                    android:layout_marginTop="10dp"
                    android:text="@string/cetatenie"/>

            <TextView
                    android:id="@+id/tv_loc_nastere_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_cetatenie_f"
                    android:layout_marginTop="10dp"
                    android:text="@string/loc_nastere"/>

            <TextView
                    android:id="@+id/tv_domiciliu_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loc_nastere_f"
                    android:layout_marginTop="10dp"
                    android:text="@string/domiciliu"/>

            <TextView
                    android:id="@+id/tv_serie_nr_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_domiciliu_f"
                    android:layout_marginTop="10dp"
                    android:text="@string/seria_nr"/>

            <TextView
                    android:id="@+id/tv_valabilitate_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_serie_nr_f"
                    android:layout_marginTop="10dp"
                    android:text="@string/valabilitate"/>

            <TextView
                    android:id="@+id/tv_emisa_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_valabilitate_f"
                    android:layout_marginTop="10dp"
                    android:text="@string/emisa_de"/>

            <TextView
                    android:id="@+id/text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status_message"
                    android:layout_alignEnd="@+id/status_message"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
            android:id="@+id/rl_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
    >

        <androidx.cardview.widget.CardView
                android:id="@+id/cardViewScan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                <ImageView
                        android:id="@+id/iv_qr_code"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_scan_id"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/iv_qr_code"
                        android:text="Începe scanarea"/>

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward_24dp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <CheckBox
                android:id="@+id/auto_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewScan"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="24dp"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:text="@string/auto_focus"
                tools:ignore="RtlHardcoded"/>

        <CheckBox
                android:id="@+id/use_flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/auto_focus"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="24dp"
                android:buttonTint="@color/colorAccent"
                android:checked="false"
                android:text="@string/use_flash"
                tools:ignore="RtlHardcoded"
                android:visibility="gone"/>
    </RelativeLayout>


</RelativeLayout>