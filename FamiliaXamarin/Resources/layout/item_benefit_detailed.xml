<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorSecondary"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
        android:id="@+id/tvDateAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/tvDateAndTime"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvLabelDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="16dp"
        android:text="Detalii"
        android:textStyle="bold"/>

     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_marginTop="8dp"
         android:background="@color/iron"
         android:layout_below="@+id/tvLabelDetails"/>

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textSize="16sp"
        android:layout_below="@+id/tvLabelDetails"
        android:layout_marginTop="16dp"/>


     <TextView
        android:id="@+id/tvLabelObservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/tvDetails"
        android:layout_marginTop="16dp"
        android:text="Observatii"
        android:textStyle="bold"/>

     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_marginTop="8dp"
         android:background="@color/iron"
         android:layout_below="@+id/tvLabelObservations"/>

    <TextView
        android:id="@+id/tvObservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textSize="16sp"
        android:layout_below="@+id/tvLabelObservations"
        android:layout_marginTop="16dp"/>
    

    </RelativeLayout>

</android.support.v7.widget.CardView>

