<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- When the view is "activated".  In SINGLE_CHOICE_MODE, it flags the active row
     of a ListView -->
    <item android:state_focused="true" android:color="@color/colorAccent"/>
    <item android:state_activated="true" android:color="@color/colorAccent" />

    <!-- Default, "just hangin' out" state. -->
    <item android:state_enabled="true" android:color="@color/colorSecondary"/>
</selector>